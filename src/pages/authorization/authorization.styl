.dynamicInput
   sizer(100%, 68%)
   outline none
   border-top none
   border-left none
   border-right none
   border-bottom solid 2px #D9D9D9
   box-sizing border-box
   fonter(650, 1.5rem, 1.6rem)
   padding-left .5vh
   &::placeholder
      opacity 0
   &:focus
      ~ .dynamicLabel
         opacity 60%
   &:not(:placeholder-shown)
      ~ .dynamicLabel
         opacity 60%
         top 0
.dynamicLabel 
   transition .2s
   position absolute
   top 4.5vh
   left .5vh
   fonter(650, 1.5rem, 1.6rem)

